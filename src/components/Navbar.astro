---
const currentUrl = new URL(Astro.request.url).pathname;

const urls = [
  { path: '/', title: 'Home' },
  { path: '/privacy-policy', title: 'Privacy Policy' },
  { path: '/terms-of-service', title: 'Terms of Service' }
];
---

<nav class="bg-[#F2F2F7] bg-opacity-50 backdrop-blur-md p-4 w-full top-0 fixed z-50 flex flex-row justify-center">
  <ul class="flex flex-row w-full lg:w-1/2 2xl:w-1/3 justify-between">
    {urls.map(({ path, title }) => (
      <li class="text-left md:flex-1 md:text-center mb-2 md:mb-0">
        <a 
          href={path} 
          class={`block md:inline-block md:w-full hover:text-blue ${
            currentUrl === path || currentUrl === `${path}/` 
              ? 'font-bold text-blue' 
              : ''
          }`}
        >
          {title}
        </a>
      </li>
    ))}
  </ul>
</nav>