---
import Layout from "../layouts/layout.astro";
---

<Layout title="404">
  <main class="p-4 flex flex-col items-center justify-evenly h-screen">
    <div class="text-center">
      <h1 class="text-blue font-bold md:text-9xl text-7xl motion-opacity-in-0 -motion-translate-y-in-50">Page Not Found</h1>
      <h2 class="text-blue/60 font-bold md:text-6xl text-4xl motion-opacity-in-0 -motion-translate-y-in-50">404</h1>
    </div>
    <div class="max-w-prose text-center motion-opacity-in-0 -motion-translate-y-in-50 motion-delay-300">
      <p class="text-gray-700 text-2xl ">Sorry, the page you were looking for does not exist.</p>
      <a href="/" class="text-blue font-bold text-2xl">Go back home</a>
    </div>
  </main>
</Layout>